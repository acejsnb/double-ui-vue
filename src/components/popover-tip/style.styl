.d-popover-tip
  position absolute
  display inline-block
  padding-top 8px
  border-radius 4px
  max-width 480px
  z-index 700
  font-size 0
  .d-popover-tip-triangle
    position absolute
    left 50%
    border-style solid
    width 0
    height 0
.d-popover-tip-split
  background-color var(--theme)
  &.d-popover-tip-top
    .d-popover-tip-triangle
      border-color var(--theme) transparent transparent transparent
  &.d-popover-tip-bottom
    .d-popover-tip-triangle
      border-color transparent transparent var(--theme) transparent
.d-popover-tip-words
  background-color var(--popover-tip-bg)
  &.d-popover-tip-top
    .d-popover-tip-triangle
      border-color var(--popover-tip-bg) transparent transparent transparent
  &.d-popover-tip-bottom
    .d-popover-tip-triangle
      border-color transparent transparent var(--popover-tip-bg) transparent

.d-popover-tip-top
  filter drop-shadow(var(--box-shadow-triangle-bottom))
  .d-popover-tip-triangle
    bottom -6px
    border-width 6px 6px 0 6px
.d-popover-tip-bottom
  filter drop-shadow(var(--box-shadow-triangle-top))
  .d-popover-tip-triangle
    top -6px
    border-width 0 6px 6px 6px

.d-popover-tip-content
  display inline-flex
  flex-wrap wrap
  padding-left 4px
  padding-right 8px
  max-width 480px
  max-height 184px
  overflow-x hidden
  overflow-y auto
.d-popover-tip-content-item
  margin-left 4px
  margin-bottom 8px
  padding-left 4px
  padding-right @padding-left
  background-color var(--grey-100)
  border-radius 2px
  max-width 100%
  overflow hidden
  white-space nowrap
  .d-popover-tip-item-text
    display inline-block
    width 100%
    line-height 24px
    color var(--grey-900)
    font-size 14px
.d-popover-tip-content-item-before
  position relative
  &::before
    position absolute
    top 0
    left 0
    display inline-block
    background-color var(--grey-100)
    border-radius 2px
    width 20px
    height 24px
    content '...'
    color var(--grey-900)
    font-size 14px
    text-align center
    z-index 1

.d-popover-tip-content-words
  display inline-block
  padding-left 4px
  padding-bottom 8px
  width 100%
  line-height 24px
  color var(--theme)
  font-size 14px
