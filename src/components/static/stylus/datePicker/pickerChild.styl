.p-picker-child-select-box
  border 1px solid var(--grey-200)
  width 296px
  .p-picker-child-select-box-title
    border-bottom 1px solid var(--grey-200)
    width 100%
    height 32px
    color var(--grey-900)
    font-size 14px
    .p-picker-child-select-box-title-text
      display flex
      align-items center
      justify-content center
      line-height @height
      > article
        display ruby
        line-height @height
        user-select none
        cursor pointer
        transition color .3s
        &+article
          margin-left 12px
      .p-picker-active-title
        &:hover
          color var(--blue-500)
  .p-picker-child-select-box
    border 0

.p-picker-child-select-box-border-left
    border-left 0
