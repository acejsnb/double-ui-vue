/* 年面板样式 */
.p-picker-panel-content
  padding 0 0 12px 15px
  width 100%
  height 252px
  .p-picker-panel-select
    height 240px
    .p-picker-panel-list-box
      padding-top 8px
      padding-bottom 8px
      display flex
      flex-wrap wrap
      width 100%
    .p-picker-panel-text
      margin-right 12px
      margin-top 12px
      border-width 1px
      border-style solid
      border-color transparent
      border-radius 4px
      width 80px
      height 44px
      line-height @height
      text-align center
      cursor pointer
      transition background-color .3s
      &:nth-of-type(3n)
        margin-right 0
      &:hover
        background-color  var(--hover-color-grey)
      span
        position relative
        color var(--grey-900)
        font-size 14px
        text-align center
        transition color .3s
        user-select none
        z-index 10
    .p-picker-panel-text-current
       background-color var(--theme) !important
       border-color var(--blue-500)
       span
         color var(--blue-500)
    .p-picker-panel-text-multiple
      position relative
      &:hover
        background-color var(--grey-200)
      &::before
        position absolute
        top -1px
        left -7px
        display inline-block
        background-color var(--grey-200)
        width 92px
        height 44px
        content ''
      &.p-picker-panel-text-grey
        span
          color var(--grey-900)
    .p-picker-panel-text-selected
       background-color var(--blue-500) !important
       span
         color #fff !important
       &::before
         display none
    .p-picker-panel-text-disabled
       background-color var(--grey-200) !important
       cursor not-allowed
       span
         color var(--grey-400)
       &::before
         display none
    .p-picker-panel-text-selected:lang(selected) + .p-picker-panel-text-multiple::before
       left -15px
       width 100px
       z-index -1
    .p-picker-panel-text-multiple + .p-picker-panel-text-selected
       position relative
       z-index 1
       &::before
         position absolute
         top -1px
         left -10px
         display inline-block
         background-color var(--grey-200)
         border-radius 0
         width 16px
         height 44px
         content ''
         z-index -1
       &::after
         position absolute
         top -1px
         left -1px
         display inline-block
         background-color var(--blue-500)
         border-radius 4px
         width 80px
         height 44px
         content ''
         z-index 1
    .p-picker-panel-text-selected + .p-picker-panel-text-selected
       &::before
         display none
       &::after
         display none
    .p-picker-panel-text-grey
       position relative
       cursor not-allowed
       &:hover
         background none
         .p-picker-panel-text-tip
           top -20px
           opacity 1
       span
         color var(--grey-400)
      .p-picker-panel-text-tip
        position absolute
        left -30px
        top -18px
        padding 4px 8px
        background-color var(--theme)
        border 1px solid var(--grey-200)
        border-radius 4px
        box-shadow var(--box-shadow-bottom)
        opacity 0
        width 140px
        color var(--grey-900)
        font-size 12px
        line-height 18px
        pointer-events none
        transition all .3s
        z-index 11
