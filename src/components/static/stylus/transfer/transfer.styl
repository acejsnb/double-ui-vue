.p-transfer-main
	display: inline-flex
	background-color: var(--theme)
	border-radius: 4px
	box-shadow: var(--modal-shadow-bottom)
	width: 100%
	height: 480px
	.p-transfer-main-child
		width: 50%
		height: 100%
	.p-transfer-left
		padding-top: 20px
		border-right: 1px solid var(--grey-200)
		.p-transfer-left-input
			width: 100%
			padding-bottom: 11px
			padding-left: 28px
			padding-right: 28px
			border-bottom: 1px solid var(--grey-200)
		.p-transfer-left-content
			width 100%
			overflow-y auto
			padding-top 8px
			padding-bottom 8px
			.p-select-option
				.p-select-option-item
					padding-left: 28px
					padding-right: 28px
			.p-transfer-left-content-none
				width: 100%
				padding-left: 28px
				line-height: 38px
				color: var(--grey-400)
				font-size: 14px
				user-select: none
	.p-transfer-right
		.p-transfer-right-title
			display: flex
			justify-content: space-between
			align-items: center
			padding-left: 16px
			padding-right: 28px
			border-bottom: 1px solid var(--grey-200)
			height: 64px
			line-height: 22px
			&.p-transfer-right-title-border
				border-bottom-color: var(--grey-100)
			> article
				font-size: 14px
			.p-transfer-right-title-text
				color: var(--grey-500)
			.p-transfer-right-title-text-num
				margin-left: 4px
				color var(--grey-900)
				font-weight 600
			.p-transfer-right-clear
				color: var(--grey-400)
				transition: color 0.3s
				cursor: not-allowed
			.p-transfer-right-clear-active
				color: var(--blue-500)
				cursor: pointer
				&:active
					color: var(--blue-600)
		.p-transfer-selected
			width: 100%
			margin-top: 8px
			overflow-y: auto
			color: var(--grey-500)
			font-size: 14px
			.p-transfer-selected-item
				display: inline-flex
				justify-content: space-between
				align-items: center
				padding-left: 16px
				padding-right: 12px
				width: 100%
				height: 38px
				transition background-color .3s
				&:hover
					background-color  var(--hover-color-grey)
				> span
					display: inline-block
					width: calc(100% - 16px)
					color: var(--grey-900)
					line-height: 22px
					white-space: nowrap
					overflow: hidden
					text-overflow: ellipsis
				> svg
					width: 14px
					cursor: pointer
					path
						transition: fill 0.3s
					&:hover
						path
							fill: var(--blue-500)
		.p-transfer-btn
			position: relative
			padding-top: 20px
			padding-bottom: 20px
			padding-right: 28px
			width: 100%
			height 72px
			text-align: right
			&.p-transfer-btn-shadow
				box-shadow: var(--box-shadow-top)
