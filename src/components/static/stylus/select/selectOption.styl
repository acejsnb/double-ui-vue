.p-select-option
	border-radius: 4px
	width: 100%
	.p-select-option-item
		padding-left: 12px
		width: 100%
		height: 38px
		line-height: 38px
		color: var(--grey-900)
		text-align: left
		font-size: 14px
		cursor: pointer
		overflow: hidden
		text-overflow: ellipsis
		white-space: nowrap
		&:hover
			background-color  var(--hover-color-grey)
